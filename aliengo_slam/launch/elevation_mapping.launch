<launch>

  <node pkg="elevation_mapping" type="elevation_mapping" name="elevation_mapping" output="screen">
    <rosparam command="load" file="$(find aliengo_slam)/config/elevation_maps_config/robot_elm.yaml" />
    <rosparam command="load" file="$(find aliengo_slam)/config/elevation_maps_config/postprocessor_pipeline.yaml" />
  </node>

  <node pkg="elevation_mapping_demos" type="tf_to_pose_publisher.py" name="waffle_pose_publisher">
    <param name="from_frame" type="string" value="world"/>
    <param name="to_frame" type="string" value="base"/>
  </node>

  <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" />

  <node pkg="nodelet" type="nodelet" name="nodelet1"
        args="load depth_image_proc/point_cloud_xyz nodelet_manager">
    <remap from="camera_info" to="/camera/color/camera_info"/>
    <remap from="image_rect" to="/camera/depth/image_raw"/>
    <remap from="points" to="/raw_points"/>
  </node>

</launch>